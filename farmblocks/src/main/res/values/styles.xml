<resources>

	<style name="FarmBlocks" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/colorWindowBackground</item>
		<item name="android:statusBarColor">@color/colorWindowBackground</item>
		<item name="android:windowLightStatusBar">true</item>
	</style>

	<style name="FarmBlocks.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
		<item name="android:background">#FFFFFF</item>
		<item name="titleTextAppearance">@style/FarmBlocks.ToolbarStyle.TextAppearance</item>
		<item name="titleTextColor">#000000</item>
		<item name="android:elevation">2dp</item>
	</style>

	<style name="FarmBlocks.ToolbarStyle.TextAppearance">
		<item name="android:textSize">20sp</item>
		<item name="android:fontFamily">@font/lato_light</item>
	</style>

	<style name="FarmBlocks.TextStyle" />

	<style name="FarmBlocks.TextStyle.H1">
		<item name="android:textSize">45sp</item>
		<item name="android:fontFamily">@font/lato_bold</item>
		<item name="android:textColor">#353535</item>
	</style>

	<style name="FarmBlocks.TextStyle.H6">
		<item name="android:textSize">18sp</item>
		<item name="android:fontFamily">@font/lato_bold</item>
		<item name="android:textColor">#353535</item>
	</style>

	<style name="FarmBlocks.TextStyle.Price">
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">@font/lato_regular</item>
		<item name="android:textColor">#FD4D50</item>
	</style>

	<style name="FarmBlocks.TextStyle.Description">
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">@font/lato_regular</item>
		<item name="android:textColor">#878787</item>
	</style>

	<style name="FarmBlocks.TextStyle.List" />

	<style name="FarmBlocks.TextStyle.List.Title">
		<item name="android:textSize">22sp</item>
		<item name="android:fontFamily">@font/lato_bold</item>
		<item name="android:textColor">#353535</item>
	</style>

	<style name="FarmBlocks.TextStyle.List.Subtitle">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/lato_regular</item>
		<item name="android:textColor">#878787</item>
	</style>

	<style name="FarmBlocks.TextStyle.List.Price">
		<item name="android:textSize">20sp</item>
		<item name="android:fontFamily">@font/lato_bold</item>
		<item name="android:textColor">#FD4D50</item>
	</style>

</resources>
